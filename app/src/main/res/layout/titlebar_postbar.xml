<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titlebar_postbar"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:drawablePadding="6dp"
        android:paddingLeft="5dp"
        android:textSize="18dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titlebar_post_back"
            >
            <ImageView
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:src="@drawable/blue_left_arrow"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="返回"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#0066cc"
                tools:ignore="InvalidId" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical">
        <ImageView
            android:id="@+id/titlebar_post_heart"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/heart_fill_black"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:id="@+id/titlebar_post_headimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/headimg_loading"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#0066cc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
    </LinearLayout>

</RelativeLayout>
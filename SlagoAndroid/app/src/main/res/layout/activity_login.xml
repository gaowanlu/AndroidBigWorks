<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0066cc"
    tools:context="site.linkway.slago.login.LoginActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Hi! Slago"
    android:gravity="center"
    android:textSize="40sp"
    android:textStyle="bold"
    android:textColor="#fafafa"
    />
    <EditText
        android:id="@+id/login_inputid"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_input_shape"
        android:hint="账号或邮箱"
        android:gravity="center" />
    <EditText
        android:id="@+id/login_inputpwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_input_shape"
        android:layout_marginTop="14dp"
        android:inputType="textPassword"
        android:hint="密码"
        android:gravity="center" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_bt_shape"
        android:gravity="center"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="登录" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:layout_gravity="left"
         >
         <TextView
             android:id="@+id/forget_password"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="left|center"
             android:text="忘记密码? |"
             android:textColor="#fafafa"
             android:textSize="15sp"
             android:layout_marginLeft="10dp"
             />
         <TextView
             android:id="@+id/registered_account"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="left|center"
             android:text=" 注册账号!"
             android:orientation="horizontal"
             android:textColor="#fafafa"
             android:textSize="15sp"
             />
     </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>